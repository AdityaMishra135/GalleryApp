<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="exposedBackgroundColor">@color/shadeWhite</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryD</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryD</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="exposedBackgroundColor">@color/shadeDark</item>
    </style>

    <style name="DetailsTheme" parent="AppTheme">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="VideoTheme" parent="AppTheme">
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CameraTheme" parent="DetailsTheme">
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="RoundedDialog">
        <item name="android:background">@drawable/dialog_bg</item>
        <item name="android:elevation">@dimen/dialog_elevation</item>
    </style>

    <style name="Theme.RoundedDialog" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:popupBackground">@drawable/rounded_outline_bg</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="exposedBackgroundColor">@color/shadeWhite</item>
    </style>

    <style name="BaseBottomSheetDialogD" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogThemeD" parent="BaseBottomSheetDialogD">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryD</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="exposedBackgroundColor">@color/shadeDark</item>
    </style>

    <style name="ChipTextView" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ActiveChip" parent="Base.Widget.MaterialComponents.Chip">
        <item name="chipBackgroundColor">@color/chip_active</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="InctiveChip" parent="Base.Widget.MaterialComponents.Chip">
        <item name="chipBackgroundColor">@color/chip_inctive</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="TsbItem" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabPaddingTop">2dp</item>
        <item name="tabPaddingBottom">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
    </style>

    <style name="TsbText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
